<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cpes.dao.PermissionDao">

	<select id="queryAll" resultType="permission">
			select * from t_permission
	</select>
	
	<select id="queryPermissionById" resultType="permission">
			select * from t_permission  where id = #{id}
	</select>
	
	<select id="queryRolePermissionId" resultType="Integer">
			select permissionid from t_role_permission  where id = #{id}
	</select>
   
   <insert id="insertPermission">
   	 insert into t_permission (
   	 	name,pid,url
   	 ) values (
   	 	#{name},#{pid},#{url}
   	 )
   </insert>
   
   <update id="updatePermission">
   	update  t_permission set name = #{name},url = #{url} where id = #{id}
   </update>
   
   <delete id="deletePermission">
   	delete from t_permission where id = #{id}
   </delete>
</mapper>